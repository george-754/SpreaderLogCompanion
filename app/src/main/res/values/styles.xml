<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App" parent="Theme.Material3.DayNight">
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/md_theme_dark_background</item>
        <item name="colorOnPrimary">@color/dark_yellow</item>
        <item name="colorSurface">@color/light_grey</item>
        <item name="colorOnSurface">@color/dark_red</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_background</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.MediumComponent</item>
        <!-- Customize text field of the text input mode. -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
    </style>

    <!-- Alert Dialog Style -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorOnPrimary">@color/light_red</item>
        <item name="colorSecondary">@color/dark_yellow</item>
        <item name="colorOnSurfaceVariant">@color/dark_grey</item>
        <item name="colorSurface">@color/light_grey</item>
        <item name="colorOnSurface">@color/dark_red</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Material3</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Material3.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Material3.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Material3.Button</item>
    </style>

    <!-- Button style -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

</resources>