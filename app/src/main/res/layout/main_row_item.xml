<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:longClickable="true">


    <TextView
        android:id="@+id/row_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="1sp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Date"
        android:textColor="@color/light_grey"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>

    <TextView
        android:id="@+id/row_farmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/row_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:text="Farmer Brown"
        android:textColor="@color/light_grey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/row_farmer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:text="Home Field"
        android:textColor="@color/light_grey"/>

    <TextView
        android:id="@+id/row_acres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flow_verticalAlign="center"
        android:text="147"
        android:textColor="@color/light_grey"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flow_horizontalAlign="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/row_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcitic Lime"
            android:textColor="@color/light_grey"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>